@model ExercisesViewModel<ExerciseWithSolutionStatus>

<h2>Упражнения</h2>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="~/css/ExerciseStyle.css" rel="stylesheet">
<div>
    @foreach (var exerciseWithSolution in Model.ExercisesWithSolutionStatus)
    {
        var className = "exercise-block";
        if (exerciseWithSolution.HasSolution)
        {
            className += " solved";
        }
        <div class="@className" data-exercise-model-id="@exerciseWithSolution.Exercise.Id" id="@exerciseWithSolution.Exercise.Id" onclick="openPopup(this)">
            <div style="display: flex;">
                <p class="exercise-number">@exerciseWithSolution.Exercise.Section</p>.<p class="exercise-section">@exerciseWithSolution.Exercise.Number</p>
            </div>
            <h3 class="exercise-name">@exerciseWithSolution.Exercise.Name</h3>
            <div class="exercise-details" style="display: none;">
                <p class="exercise-description">@exerciseWithSolution.Exercise.Description</p>
            </div>
        </div>
    }
</div>

<div>
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("UserExercise", new { page = Model.CurrentPage - 1 })" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Предыдущая</span>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link" href="@Url.Action("UserExercise", new { page = i })">@i</a>
                    </li>
                }

                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" href="@Url.Action("UserExercise", new { page = Model.CurrentPage + 1 })" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Следующая</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>


<div class="popup-container" id="popupContainer">
    <div class="popup">
        <h3 id="popupTitle">f</h3>
        <p id="popupDescription"></p>
        <button onclick="closePopup()">Close</button>
        <input type="text" id="answer-text">
        <button onclick="checkAnswer()">Проверить ответ</button>
        <form method="get" asp-controller="Chat" asp-action="IndexById">
            <input id="Id-toSend" type="hidden" name="Id" value="" />
            <input type="submit" value="Обратиться к боту" />
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/UserExerciseScript.js"></script>
}

